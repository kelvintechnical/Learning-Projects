<Window x:Class="NameGreeterDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NameGreeterDesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Welcome to the Name Greeter!" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   TextAlignment="Center"/>

            <TextBlock Text="What is your name?" 
                   Margin="0,0,0,5"/>

            <TextBox x:Name="NameTextBox" 
                 Margin="0,0,0,10"
                 Padding="5"/>

            <Button x:Name="GreetButton" 
                Content="Greet Me" 
                Click="GreetButton_Click"
                Padding="10"
                Margin="0,0,0,10"/>

            <TextBlock x:Name="GreetingLabel" 
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="Green"
                   TextAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
